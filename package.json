    "first-run": "^3.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.19.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "pusher": "^5.1.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.5",
